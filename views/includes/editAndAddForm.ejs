<% if (editMode) { %>
<form class="col-5" action="/admin/edit-product" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
    <div class="mb-3">
        <label class="form-label m-0" for="title">Title</label>
        <input class="form-control m-0" type="text" name="title" id="title" value="<%= product.title %>" />
    </div>

    <input type="text" name="id" id="productId" value="<%= product.id %>" hidden />

    <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input class="form-control m-0" type="file" id="image" name="image" />
    </div>
    <div class="mb-3">
        <label class="form-label m-0" for="price">Price</label>
        <input
            class="form-control m-0"
            type="number"
            name="price"
            id="price"
            step="0.01"
            value="<%= product.price %>"
        />
    </div>
    <div class="mb-3">
        <label class="form-label m-0" for="description">Description</label>
        <textarea class="form-control m-0" name="description" id="description" rows="5">
<%= product.description %></textarea
        >
    </div>

    <button class="btn btn-info" type="submit">Update Product</button>
</form>
<% }else{ %>
<form class="col-5" action="/admin/add-product" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
    <div class="mb-3">
        <label for="title" class="form-label m-0">Title</label>
        <input class="form-control m-0" type="text" name="title" id="title" />
    </div>
    <!-- <div class="form-control">
        <label for="image">Image URL</label>
        <input type="text" name="image" id="image" />
    </div> -->
    <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input class="form-control m-0" type="file" id="image" name="image" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <input class="form-control m-0" type="number" name="price" id="price" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control m-0" name="description" id="description" rows="5"></textarea>
    </div>

    <button class="btn btn-info" type="submit">Add Product</button>
</form>
<% } %>
