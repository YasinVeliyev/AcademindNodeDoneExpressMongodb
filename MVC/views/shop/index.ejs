<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
       <% if (message[0]) { %>
        <span class="alert alert-info" role="alert"><%= message[0] %> </span>
       <% } %>
        <% if (prods.length > 0) { %>
            <div class="grid m-0">
                <% for (let product of prods) { %>
                    <article class="card product-item mt-1">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product.id %>" class="btn btn-info">Details</a>
                            <%- include('../includes/add-to-cart.ejs',{product}) %>
                        </div>
                    </article>
                <% } %>
            </div>
            <div class="d-flex justify-content-center">
                <a href="/?page=1" class='btn m-1 btn-primary <%= currentPage==1?"disabled":"" %>'>First</a> 
                <% for( let page of paginate) { %>
                    <a href="/?page=<%= page %>" class='btn btn-primary m-1 <%= page==currentPage?"disabled disabled btn-lg":"" %>'> <%= page %> </a> 
                <% } %>
                <a href="/?page=<%= pageCount %>" class='btn m-1 btn-primary <%= currentPage==pageCount?"disabled":"" %>'>Last</a> 
            </div>
            
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>